{
  "name": "karambit-inject",
  "version": "2.3.0",
  "description": "A compile-time and type-safe dependency injector for Typescript.",
  "keywords": [
    "dependency injection",
    "di",
    "ioc",
    "inject"
  ],
  "main": "build/karambit.js",
  "license": "Apache-2.0",
  "files": [
    "FEATURES.md",
    "build/karambit.d.ts",
    "build/*.js"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "ttsc",
    "test": "jest && npm run --prefix integration test",
    "lint": "eslint 'src/**/*.ts'",
    "fix": "eslint 'src/**/*.ts' --fix",
    "check": "npm run lint && npm run test",
    "release": "npm run build && npm run check"
  },
  "author": "DevPrice",
  "repository": "github:DevPrice/karambit",
  "bugs": "https://github.com/DevPrice/karambit/issues",
  "dependencies": {
    "chalk": "^4.1.2"
  },
  "devDependencies": {
    "@devprice/eslint-config": "^1.0.1",
    "@devprice/version-from-git": "^1.1.2",
    "@types/glob": "^8.1.0",
    "@types/jest": "^28.1.3",
    "@types/node": "^17.0.31",
    "eslint": "^8.18.0",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "karambit-inject": "^2.3.0",
    "lint-staged": "^13.0.3",
    "ts-jest": "^28.0.4",
    "ttypescript": "^1.5.15",
    "typescript": "^4.8.0"
  },
  "peerDependencies": {
    "typescript": ">= 4.8.0"
  },
  "lint-staged": {
    "*.ts": "eslint --fix"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.ts"
    ],
    "testPathIgnorePatterns": [
      "/integration/",
      "/node_modules/"
    ],
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "globals": {
      "ts-jest": {
        "useEsm": true
      }
    }
  }
}
