{
  "compilerOptions": {
    "target": "es2021",
    "outDir": "build",
    "module": "CommonJS",
    "declaration": true,
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "plugins": [
      { "transform": "karambit-inject" }
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
