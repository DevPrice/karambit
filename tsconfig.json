{
  "compilerOptions": {
    "target": "es2022",
    "outDir": "build",
    "module": "CommonJS",
    "declaration": true,
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "incremental": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
