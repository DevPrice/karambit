{
  "compilerOptions": {
    "target": "es2022",
    "rootDir": "./src",
    "outDir": "./build",
    "tsBuildInfoFile": "./build/.tsbuildinfo",
    "module": "Node16",
    "declaration": true,
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "incremental": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
