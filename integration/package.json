{
  "name": "karambit-inject-integration",
  "version": "1.0.0",
  "description": "Integration tests",
  "scripts": {
    "build": "ttsc",
    "pretest": "jest --clear-cache",
    "test": "jest"
  },
  "author": "DevPrice",
  "devDependencies": {
    "@types/jest": "^28.1.3",
    "@types/node": "^17.0.31",
    "jest": "^28.1.1",
    "karambit-inject": "file:..",
    "ts-jest": "^28.0.4",
    "ttypescript": "^1.5.13",
    "typescript": "^4.8.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "globals": {
      "ts-jest": {
        "useEsm": true,
        "compiler": "ttypescript"
      }
    }
  }
}
